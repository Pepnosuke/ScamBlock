{
  "manifest_version": 3,
  "name": "ScamBlock_Chat",
  "version": "1.0",
  "description": "A security chatbot powered by Qwen 2.5.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}
